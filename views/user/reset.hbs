<div class="container">
    <div class="col-12 d-flex align-items-center justify-content-center vh-100">
        <div class="border p-3 shadow-sm rounded">
            <div class="content-head  border-bottom">
                <h3>Reset Password</h3>
            </div>
            <div class="content-body p-3">
                <p>Please enter your email address to reset your password.</p>
                {{#if errorMessage}}
                    <p class="text-danger">{{errorMessage}}</p>
                {{/if}}
                <form action="/reset_pass" method="post">
                    <div class="mt-3">
                        <input type="email" name="email" placeholder="Email address" required="true" class="rounded pl-2 w-100" style="border: 1px solid #ccc; padding: 0.2rem;">
                        <div class="d-flex align-items-center justify-content-end mt-4">
                            <a class="btn btn-primary" href="/user_signin" style="margin-right: 5px;">Cancel</a>
                            <button type="submit" class="btn btn-success">Reset</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


{{>user/footer}}
{{>user/header-v4}}

<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
<div class="container mt-2">
    <span class="pull-right hidden-print" style="z-index: 10000;">
    <a class="btn btn-sm btn-white m-b-10 p-l-5" onclick="generatePDF()">Download</a>
    <a href="javascript:;" onclick="window.print()" class="btn btn-sm btn-white m-b-10 p-l-5"><i
            class="fa fa-print t-plus-1 fa-fw fa-lg"></i> Print</a>
</span>
</div>
<div class="container mt-5">
    <div class="col-md-12">
        <div class="invoice" id="invoice">
            <!-- begin invoice-company -->
            <div class="invoice-company text-inverse f-w-600">

                Fashion Culture
            </div>
            <!-- end invoice-company -->
            <!-- begin invoice-header -->
            <div class="invoice-header">
                <div class="invoice-from">
                    <small>from</small>
                    <address class="m-t-5 m-b-5">
                        <strong class="text-inverse">{{orderDetails.orderObj.addr.name}}</strong><br>
                        {{orderDetails.orderObj.addr.address}}<br>
                        {{orderDetails.orderObj.addr.locality}}, {{orderDetails.orderObj.addr.pincode}}<br>
                        Phone: {{orderDetails.orderObj.addr.mobile}}<br>
                    </address>
                </div>
                <div class="invoice-to">
                    <small>to</small>
                    <address class="m-t-5 m-b-5">
                        <strong class="text-inverse">Fashion Culture</strong><br>
                        Street Address<br>
                        Calicut, 676318<br>
                        Phone: +91 -----------<br>
                    </address>
                </div>
                <div class="invoice-date">
                    <small>Invoice</small>
                    <div class="date text-inverse m-t-5">{{orderDetails.orderObj.date}}</div>
                    <div class="invoice-detail">
                        #{{orderDetails.orderObj.orderId}}<br>
                        Services Product
                    </div>
                </div>
            </div>
            <!-- end invoice-header -->
            <!-- begin invoice-content -->
            <div class="invoice-content">
                <!-- begin table-responsive -->
                <div class="table-responsive">
                    <table class="table table-invoice">
                        <thead>
                            <tr>
                                <th>TASK DESCRIPTION</th>
                                <th class="text-center" width="10%"></th>
                                <th class="text-center" width="10%"></th>
                                <th class="text-right" width="20%">TOTAL(Discount)</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each orderDetails.orderObj.products}}
                            <tr>
                                <td>
                                    <span class="text-inverse">{{products.product_name}}</span><br>
                                    <small>{{products.brand_name}}</small>
                                </td>
                                <td class="text-center"></td>
                                <td class="text-center"></td>
                                <td class="text-right">Rs.{{products.discount_price}}</td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
                <!-- end table-responsive -->
                <!-- begin invoice-price -->
                <div class="invoice-price">
                    <div class="invoice-price-left">
                        <div class="invoice-price-row">
                            <div class="sub-price">
                                <small>SUBTOTAL</small>
                                <span class="text-inverse">Rs.{{orderDetails.orderObj.totalAmount}}</span>
                            </div>
                            {{!-- <div class="sub-price">
                                <i class="fa fa-plus text-muted"></i>
                            </div> --}}
                            {{!-- <div class="sub-price">
                                <small>PAYPAL FEE (5.4%)</small>
                                <span class="text-inverse">$108.00</span>
                            </div> --}}
                        </div>
                    </div>
                    <div class="invoice-price-right">
                        <small>TOTAL</small> <span class="f-w-600">Rs.{{orderDetails.orderObj.totalAmount}}</span>
                    </div>
                </div>
                <!-- end invoice-price -->
            </div>
            <!-- end invoice-content -->
            <!-- begin invoice-note -->
            <div class="invoice-note">
                * Make all cheques payable to [Your Company Name]<br>
                * Payment is due within 30 days<br>
                * If you have any questions concerning this invoice, contact [Name, Phone Number, Email]
            </div>
            <!-- end invoice-note -->
            <!-- begin invoice-footer -->
            <div class="invoice-footer">
                <p class="text-center m-b-5 f-w-600">
                    THANK YOU FOR YOUR BUSINESS
                </p>
                <p class="text-center">
                    <span class="m-r-10"><i class="fa fa-fw fa-lg fa-globe"></i> fashionCulture.com</span>
                    <span class="m-r-10"><i class="fa fa-fw fa-lg fa-phone-volume"></i> T:016-18192302</span>
                    <span class="m-r-10"><i class="fa fa-fw fa-lg fa-envelope"></i> test@123.com</span>
                </p>
            </div>
            <!-- end invoice-footer -->
        </div>
    </div>
</div>



<script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js"
    integrity="sha512-GsLlZN/3F2ErC5ifS5QtgpiJtWd43JWSuIgh7mbzZ8zBps+dvLusV+eNQATqgA/HdeKFVgA5v3S/cIrLF7QnIg=="
    crossorigin="anonymous" referrerpolicy="no-referrer"></script>

<script>
    function generatePDF() {
        // Choose the element that our invoice is rendered in.
        const element = document.getElementById('invoice');
        // Choose the element and save the PDF for our user.
        html2pdf().from(element).save();
    }
</script>
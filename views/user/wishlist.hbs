{{#if products}}
<div class="bg0 m-t-23 p-b-140" id="refresh-section">
    <div class="container">
        <div class="row isotope-grid ">
            {{#each products}}
            <div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item women">
                <div class="block2" style="position: relative;">
                    <div style="
                                width: 30px;
                                height: 30px;
                                position: absolute;
                                z-index: 1;
                                background-color: #ccc;
                                right: 0;
                                display: flex;
                                align-items: center;
                                justify-content: center;
                            ">
                        <i class="fs-16 zmdi zmdi-close fs-2 text-dark"
                            onclick="removeWhishlistProduct('{{this._id}}', '{{this.product._id}}')"></i>
                    </div>
                    <a href="/product_details/{{this.product._id}}">
                        <div class="block2-pic hov-img0">

                            <img src="images/{{this.product.img_id.[0]}}" alt="IMG-PRODUCT">
                        </div>
                    </a>
                    <div class="block2-txt flex-w flex-t p-t-14">
                        <div class="block2-txt-child1 flex-col-l ">
                            <a href="/product_details/{{this.product._id}}"
                                class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
                                {{this.product.product_name}}
                            </a>

                            <span class="stext-105 cl3" style="font-size: 17px; color: black;">
                                Rs.{{this.product.price}} <span
                                    style="text-decoration: line-through; color: black; font-size: 13px;">Rs.3500</span>
                                <span style="color:orange; font-size: 16px;">(save 35%)</span>
                            </span>
                        </div>

                        <div class="block2-txt-child2 flex-r p-t-3">
                            <a href="" onclick="addtoCart('{{product._id}}', event)"
                                class="icon-header-item cl2 hov-cl1 trans-04  p-r-11 fs-4 ">
                                <i class="zmdi zmdi-shopping-cart"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>

</div>
{{else}}
<img src="/user/images/message/No WishList.png" alt="" style="width: 100%;" class="img-fluid">
{{/if}}



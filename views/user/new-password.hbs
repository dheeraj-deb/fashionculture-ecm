<div class="container">
    <div class="col-12 d-flex align-items-center justify-content-center vh-100">
        <div class="border p-3 shadow-sm rounded">
            <div class="content-head  border-bottom">
                <h3>Reset Password</h3>
            </div>
            <div class="content-body p-3">
                <p>Please enter a new passord</p>
                <form action="/pass_update" method="post">
                    <div class="mt-3">
                        <input type="text" name="password" placeholder="Password" required="true" class="rounded pl-2 w-100" style="border: 1px solid #ccc; padding: 0.2rem;">
                        <input type="hidden" name="uId" value="{{uId}}">
                        <div class="d-flex align-items-center justify-content-end mt-4">
                            <a class="btn btn-primary" href="/user_signin" style="margin-right: 5px;">Cancel</a>
                            <button type="submit" class="btn btn-success">Update</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<!-- Layout wrapper -->
<div class="layout-wrapper layout-content-navbar">
    <div class="layout-container">

        <!-- Menu -->
        {{>admin/menu}}
        <!-- / Menu -->

        <!-- Layout container -->
        <div class="layout-page">
            <!-- Navbar -->
            {{>admin/nav}}
            <!-- / Navbar -->

            <!-- Content wrapper -->
            <div class="content-wrapper">
                <!-- Content -->

                <div class="container mt-5">
                    <div class="card mb-4">
                        {{!-- --}}
                        <h6>Add Coupon</h6>
                        <div class="card-body">
                            <form action="/admin/add-coupon" method="post">

                                <div class="mb-4">
                                    <label style="display: block;" class="mb-2" for="">Coupon Code</label>
                                    <input type="text" name="code" required style="width: 80%;
                                                                                 border: 1px solid #ccc;
                                                                                 height: 35px;">
                                </div>

                                <div class="mb-4">
                                    <label style="display: block;" class="mb-2" for="">Discription</label>
                                    <input type="text" name="discription" required style="width: 80%;
                                                                                 border: 1px solid #ccc;
                                                                                 height: 35px;">
                                </div>

                                <div class="mb-4">
                                    <label style="display: block;" class="mb-2" for="">Minimum Purchace Amount</label>
                                    <input type="text" name="minimum_pur_amt" required style="width: 80%;
                                                                                 border: 1px solid #ccc;
                                                                                 height: 35px;">
                                </div>

                                <div class="mb-4">
                                    <label style="display: block;" class="mb-2" for="">Coupon Value</label>
                                    <input type="text" name="value" required style="width: 50%;
                                                                                 border: 1px solid #ccc;
                                                                                 height: 35px;">
                                    <label style="display: block;" class="mb-2" for="">(Discount Persentage)</label>
                                </div>

                                <div class="mb-4">
                                    <label style="display: block;" class="mb-2" for="">Coupon Valid Between</label>
                                    <div class="d-flex ">
                                        <div class="me-4">
                                            <label style="display: block;" class="mb-2" for="">Start Date</label>

                                            <input type="date" name="start_date" required style="width: 110px;
                                                                                 border: 1px solid #ccc;
                                                                                 height: 35px;">
                                        </div>
                                        <div>
                                            <label style="display: block;" class="mb-2" for="">End Date</label>
                                            <input type="date" name="end_date" required style="width: 110px;
                                                                                 border: 1px solid #ccc;
                                                                                 height: 35px;">
                                        </div>
                                    </div>
                                </div>




                                <button type="submit" class="btn btn-primary">Save</button>
                            </form>
                        </div>
                    </div>
                </div>
                <!-- / Content -->
                <div class="content-backdrop fade"></div>
            </div>
            <!-- Content wrapper -->
        </div>
        <!-- / Layout page -->
    </div>

    <!-- Overlay -->
    <div class="layout-overlay layout-menu-toggle"></div>
</div>
<!-- / Layout wrapper -->